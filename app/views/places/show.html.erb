<h1><%= @place.name %></h1>

<% for entry in @entries %>
  <% if entry.place_id == @place.id %>
    <p>
      <h2><%= entry.title %></h2>
    </p>

    <p><%= entry.posted_on %></p>
    <p><%= entry.description %></p>
  <% end %>
<% end %>
<br>
<p><%= link_to "New Post", new_entry_path({"place_id" => @place.id}) %></p>
<p><%= link_to "Back to Places", '/places' %></p>